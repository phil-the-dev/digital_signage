<!DOCTYPE html>
<html>
  <head>
    <title>DigitalSignage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag params[:controller], media: 'all', 'data-turbolinks-track': 'reload' if stylesheet_exists?(params[:controller]) %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag params[:controller], 'data-turbolinks-track': 'reload' if javascript_pack_exists?(params[:controller]) %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>